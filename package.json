{
  "name": "banditstash",
  "version": "0.1.0",
  "description": "Type-safe wrapper for localStorage / sessionStorage",
  "author": "Vladimir Klepov v.klepov@gmail.com",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "scripts": {
    "test": "rm -rf dist/tests && tsc -p tests/tsconfig.json && uvu dist/tests '.test.js$'",
    "test:coverage": "c8 --100 --exclude dist/tests npm test",
    "format": "prettier --write --loglevel silent src",
    "verify": "npm run format && npm run test:coverage",
    "size": "node bench/run",
    "build": "rm -rf dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtspile/banditstash.git"
  },
  "keywords": [
    "typescript",
    "zod"
  ],
  "bugs": {
    "url": "https://github.com/thoughtspile/banditstash/issues"
  },
  "homepage": "https://github.com/thoughtspile/banditstash#readme",
  "devDependencies": {
    "@types/node": "^18.14.1",
    "c8": "^7.13.0",
    "esbuild": "^0.17.10",
    "prettier": "^2.8.4",
    "terser": "^5.16.4",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  }
}
