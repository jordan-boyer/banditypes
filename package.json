{
  "name": "banditypes",
  "version": "0.2.1",
  "description": "The might 400-byte schema validator",
  "author": "Vladimir Klepov v.klepov@gmail.com",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "module": "./dist/index.js",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "scripts": {
    "test": "rm -rf dist/tests && tsc -p tests/tsconfig.json && uvu dist/tests '.test.js$'",
    "test:coverage": "c8 --100 --exclude dist/tests npm test",
    "format": "prettier --write --loglevel silent src",
    "verify": "npm run format && npm run test:coverage",
    "size": "node bench/run",
    "build": "rm -rf dist && tsc && tsc -p tsconfig.cjs.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtspile/banditypes.git"
  },
  "keywords": [
    "typescript",
    "superstruct",
    "schema",
    "validation",
    "zod"
  ],
  "bugs": {
    "url": "https://github.com/thoughtspile/banditypes/issues"
  },
  "homepage": "https://github.com/thoughtspile/banditypes#readme",
  "devDependencies": {
    "@types/node": "^18.14.1",
    "c8": "^7.13.0",
    "esbuild": "^0.17.10",
    "prettier": "^2.8.4",
    "superstruct": "^1.0.3",
    "terser": "^5.16.4",
    "typed": "^4.1.2",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6",
    "zod": "^3.20.6"
  }
}
